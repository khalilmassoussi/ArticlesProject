{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}!{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('article') }}
{% endblock %}
{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Article: {{ article.title }}! âœ…</h1>

        Commentaires
        <form name="commentaire" method="post" action="{{ path('app_comment_create') }}">
            <input type="hidden" value="{{ article.id }}" name="article_id">
            <input type="hidden" value="{{ app.user.id }}" name="user_id">
            <ul id="{{ article.id }}" class="commentsList list-group list-group-flush">
                <li class="list-group-item"><textarea name="text" class="form-control" placeholder="Ajouter un commentaire"></textarea></li>
            </ul>
            <button type="submit" id="addComment" class="btn btn-primary">Envoyer</button>
        </form>
    </div>
{% endblock %}
